<h1>burgers!</h1>


<ul>
  {{#each burgers}}
    {{#unless this.devouted}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devouted" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are devouted!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devouted}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devouted" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>



<h2>burgers that are not devouted!</h2>



<h2>Add a burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">devouted?</label><br>
    <input type="radio" name="devouted" value="1" checked> devouted!<br>
    <input type="radio" name="devouted" value="0"> Awake
  </div>

  <button type="submit">Add burger</button>
</form>
